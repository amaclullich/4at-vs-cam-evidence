    "name": "4AT vs CAM Comparison Results",
    "description": "Summary of evidence comparing 4AT and CAM delirium assessment tools",
    "itemListOrder": "Unordered",
    "numberOfItems": 8,
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Validation Studies",
        "description": "4AT: 33 studies vs CAM: 23 studies. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Patients Studied",
        "description": "4AT: >6,000 patients vs CAM: 2,629 patients. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Diagnostic Accuracy",
        "description": "4AT: 88% sensitivity, 88% specificity (pooled). CAM: Variable without training. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 4,
        "name": "Clinical Utility",
        "description": "4AT positive rates: 13-20% (consistent). CAM positive rates: 8-51% (highly variable). Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 5,
        "name": "Large-Scale Implementation",
        "description": "4AT: 18,040 patients, 91% completion rate. CAM: Limited data. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 6,
        "name": "Training Required",
        "description": "4AT: None required. CAM: Formal training needed. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 7,
        "name": "Administration Time",
        "description": "4AT: <2 minutes. CAM: ~5 minutes. Winner: 4AT"
      },
      {
        "@type": "ListItem",
        "position": 8,
        "name": "Guideline Recommendation",
        "description": "UK NICE 2023 recommends 4AT; explicitly replaced CAM. Winner: 4AT"
      }
    ]
  },
